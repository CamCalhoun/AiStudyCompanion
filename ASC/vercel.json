{
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "server/main.py",
      "use": "@vercel/python"
    }
  ],
  "rewrites": [
    {
      "src": "/api/(.*)",
      "dest": "/server/main"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
